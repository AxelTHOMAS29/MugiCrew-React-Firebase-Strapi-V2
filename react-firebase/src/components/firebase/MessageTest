import React, { useRef, useState } from 'react';
import { FaRegEdit } from "react-icons/fa";

const Message = () => {

    const [edit, setEdit] = useState(false);
    const [testMess, setTestMess] = useState("");
    const artistInput = useRef();


    const handleEdit = () => {
        setEdit(false);

        const Tend = {
        name: artistInput.current.value,
        }
    };

    return (
        <div className='message-container'>
            <div className="infos">
                <div className="title">
                    {edit ? (
                        <div>
                            <input
                                autoFocus
                                value={testMess}
                                onChange={(e) => setTestMess(e.target.value)}
                                defaultValue={testMess}
                                ref={artistInput}  
                            ></input>
                            <button onClick={() => handleEdit()}>Valider</button>
                        </div>
                    ) : (
                        <div>
                            {artistInput.current ? artistInput.current.value : (
                                <div value={testMess} className="message-test">
                                    Bonjour
                                </div>
                            ) }
                        </div>
                    )}
                </div>
                <div className="btn-container">
                    <div className="edit-icon" onClick={() => setEdit(!edit)}>
                        <FaRegEdit />
                    </div>

                </div>
            </div>
        </div>
    );
};

export default Message;